{
  "manifest_version": 3,
  "name": "PKF â€” Personal Knowledge Firewall",
  "version": "0.1.0",
  "description": "A mindful assistant for your attention. Shows calm, explanation-first signals while you read.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "PKF",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
